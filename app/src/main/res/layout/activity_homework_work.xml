<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="3dp"
        app:cardCornerRadius="3dp"
        app:cardMaxElevation="3dp"
        app:cardUseCompatPadding="true"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp">

        <RelativeLayout
            android:id="@+id/relassignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lnrLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8"
                    android:fontFamily="@font/metropolis"
                    android:text="Homework Id:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txthwid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:clickable="true"
                    android:fontFamily="@font/metropolis"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColorLink="@color/primary_text"
                    android:textSize="15sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnrdate"
                android:layout_below="@id/lnrLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8"
                    android:fontFamily="@font/metropolis"
                    android:text="Date:-"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:fontFamily="@font/metropolis"
                    android:text="25/12/2019"
                    android:textSize="15sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnrsubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrdate"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.8"
                        android:fontFamily="@font/metropolis"
                        android:text="Subject:-"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtsub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.22"
                        android:fontFamily="@font/metropolis"
                        android:text="Mathemeatics"
                        android:textAlignment="textStart"
                        android:textSize="15sp" />


                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnrtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrsubtitle"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8"
                    android:fontFamily="@font/metropolis"
                    android:text="Unit/Chapter:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txttitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:fontFamily="@font/metropolis"
                    android:text="Homework title"
                    android:textAlignment="textStart"
                    android:textSize="15sp" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/lnrteacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrtitle"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8"
                    android:fontFamily="@font/metropolis"
                    android:text="Teacher:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtteacherdet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:fontFamily="@font/metropolis"
                    android:text="abc"
                    android:textAlignment="textStart"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnrdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrteacher"
                android:orientation="vertical"
                android:padding="4dp"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/metropolis"
                    android:text="Description:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtdesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:fontFamily="@font/metropolis"
                    android:maxLength="50"
                    android:text="This is homework"
                    android:textAlignment="textStart"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtreadmore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:fontFamily="@font/metropolis"
                    android:maxLength="55"
                    android:text="@string/readmore"
                    android:textAlignment="textStart"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrsubmission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lnrdesc"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/metropolis"
                    android:text="Submission Date:"
                    android:textColor="@color/primary_text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtsubdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/metropolis"
                    android:text="25/12/2019"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrdownload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrsubmission"
                android:orientation="horizontal"
                android:padding="3dp"
                android:weightSum="4">

                <TextView
                    android:id="@+id/imgdownload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:fontFamily="@font/metropolis"
                    android:gravity="center"
                    android:text="Download Attachment"
                    android:clickable="true"
                    android:textColorHint="@color/secondary_text"
                    android:textColorLink="@color/colorPrimaryDark"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />
                <!--  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"

                      android:layout_weight="2"
                      android:src="@drawable/ic_download"
                      android:layout_below="@id/lnrdate"
                      />-->


            </LinearLayout>
            <!-- <ImageView
                 android:id="@+id/imgdownload"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1.5"
                 android:src="@drawable/ic_download" />-->
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>