<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/relassignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lnrsubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.6"
                    android:fontFamily="@font/metropolis"
                    android:text="Sub:-"
                    android:textColor="@color/heading"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtsub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:fontFamily="@font/metropolis"
                    android:text="Mathemeatics"
                    android:textAlignment="textStart"
                    android:textSize="15sp" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnrdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnrteacher"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/metropolis"
                android:text="Description:"
                android:textColor="@color/heading"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ScrollView
                android:id="@+id/scrassign"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtdesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/metropolis"
                        android:text="assignmnet"
                        android:textAlignment="textStart"
                        android:textSize="12sp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>



        <Button
            android:id="@+id/imgcancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/heading"
            android:fontFamily="@font/metropolis"
            android:src="@drawable/ic_cancel_black_24dp"
            android:text="Close"
            android:textColor="@color/icons"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>