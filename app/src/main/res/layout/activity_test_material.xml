<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:elevation="3dp"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="3dp">

        <RelativeLayout
            android:id="@+id/relassignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lnrsubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/metropolis"
                        android:text="Sub:-"
                        android:textColor="@color/heading"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtsub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/metropolis"
                        android:text="Mathemeatics"
                        android:textAlignment="textStart"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/metropolis"
                        android:text="Date:-"
                        android:textColor="@color/heading"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/metropolis"
                        android:text="25/12/2019"
                        android:textSize="15sp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrsubtitle"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8"
                    android:fontFamily="@font/metropolis"
                    android:text="Test/Key:"
                    android:textColor="@color/heading"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txttitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:fontFamily="@font/metropolis"
                    android:text="Assignment title"
                    android:textAlignment="textStart"
                    android:textSize="15sp" />

            </LinearLayout>

             <LinearLayout
                 android:id="@+id/lnrteacher"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/lnrtitle"
                 android:orientation="horizontal"
                 android:padding="5dp"
                 android:weightSum="4">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="2.8"
                     android:fontFamily="@font/metropolis"
                     android:text="Teacher:"
                     android:textColor="@color/heading"
                     android:textSize="15sp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/txtteacherdet"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:fontFamily="@font/metropolis"
                     android:text="Abc"
                     android:textAlignment="textStart"
                     android:textSize="15sp" />

             </LinearLayout>
            <!-- <LinearLayout
                 android:id="@+id/lnrLink"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/lnrteacher"
                 android:orientation="horizontal"
                 android:padding="5dp"
                 android:weightSum="5">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="4"
                     android:fontFamily="@font/metropolis"
                     android:text="Link:"
                     android:textColor="@color/heading"
                     android:textSize="15sp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/txtLink"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:fontFamily="@font/metropolis"
                     android:text="Lecture Online"
                     android:textAlignment="textStart"
                     android:textSize="15sp" />

             </LinearLayout>-->

            <LinearLayout
                android:id="@+id/lnrdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrteacher"
                android:orientation="vertical"
                android:padding="4dp"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/metropolis"
                    android:text="Description:"
                    android:textColor="@color/heading"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtdesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:fontFamily="@font/metropolis"
                    android:maxLength="50"
                    android:text="this is assignmnet"
                    android:textAlignment="textStart"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtreadmore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:maxLength="55"
                    android:text="@string/readmore"
                    android:textAlignment="textStart"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lnrdesc"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="4">

                <!--<TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/metropolis"
                    android:text="Submission Date:"
                    android:textColor="@color/primary_text"
                    android:textSize="15sp" />-->

                <TextView
                    android:id="@+id/txtsubdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/metropolis"
                    android:text="Download Test/Key ->"
                    android:textColor="@color/heading"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:id="@+id/imgdownload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/ic_download" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>