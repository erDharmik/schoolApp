<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/registration"
    tools:context="com.aspirepublicschool.gyanmanjari.Login">





    <LinearLayout
        android:id="@+id/lnrdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolis"
            android:text="Username"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtmobileno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_person"
            android:drawablePadding="20dp"
            android:fontFamily="@font/metropolis"
            android:hint="Enter Username"
            android:inputType="text"
            android:text="123"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/metropolis"
            android:text="Password"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>


        <EditText
            android:id="@+id/edtpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtmobileno"
            android:drawableRight="@drawable/ic_enhanced"
            android:drawablePadding="20dp"
            android:fontFamily="@font/metropolis"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:text="123"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnrdata">

            <CheckBox
                android:id="@+id/checkbox_TandC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis"
                android:textStyle="italic"></CheckBox>

            <TextView
                android:id="@+id/text_termsandcondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis"
                android:text="@string/termsandcondition"
                android:textSize="12sp"></TextView>
        </LinearLayout>

        <Button
            android:id="@+id/btnsignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect_gradient"
            android:fontFamily="@font/metropolis"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_below="@id/lnrdata">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="5dp"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/metropolis"
            android:textColor="@color/primary_text"
            android:text=" New Student?. Register Here"/>
        <TextView
            android:id="@+id/txtsignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="7dp"
            android:fontFamily="@font/metropolis"
            android:textColor="@color/colorPrimaryDark"
            android:text="Sign Up"/>

    </LinearLayout>



    <TextView
        android:id="@+id/txtsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lnrdata"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/metropolis"
        android:text="Sign In"
        android:textColor="#fff"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/txtsignup"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher_round">

    </ImageView>


</RelativeLayout>