<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:id="@+id/relproductorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lnrshopnames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/imgflower"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="0.3"
                    />

                <TextView
                    android:id="@+id/txtitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/metropolis"
                    android:padding="5dp"
                    android:text="Item Name"
                    android:textAlignment="center"
                    android:textColor="@color/secondary_text"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnritem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lnrshopnames"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/metropolis"
                        android:text="Order Id:-"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtorderid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/metropolis"
                        android:text="ORDERID@#$%"
                        android:textColor="@color/primary_text"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrdoamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lnritem"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:fontFamily="@font/metropolis"
                        android:paddingLeft="5dp"
                        android:text="Date Of Order :-"
                        android:textColor="@color/secondary_text"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtdoorder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.7"
                        android:fontFamily="@font/metropolis"
                        android:text="22/12/2019"
                        android:textColor="@color/primary_text"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:fontFamily="@font/metropolis"
                        android:text="Amount :-"
                        android:textColor="@color/secondary_text"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:fontFamily="@font/metropolis"
                        android:text="20000rs."
                        android:textColor="@color/primary_text"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <!--  <LinearLayout
                  android:layout_below="@id/lnrdoamount"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"

                  android:orientation="horizontal"
                  android:weightSum="4">

                  <Button
                      android:fontFamily="@font/metropolis"
                      android:id="@+id/btnstatus"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="2"
                      android:background="@drawable/rect_gradient"
                      android:text="Status"
                      android:textColor="@color/icons"
                      android:textSize="15sp" />

                  <Button
                      android:fontFamily="@font/metropolis"
                      android:id="@+id/btnreturn"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="2"
                      android:background="@drawable/rect_gradient"
                      android:text="Return"
                      android:textColor="@color/icons"
                      android:textSize="15sp" />
              </LinearLayout>-->
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>