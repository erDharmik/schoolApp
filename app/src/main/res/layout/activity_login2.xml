<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aspirepublicschool.gyanmanjari.Login2">

    <LinearLayout
        android:id="@+id/lnrgradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/background_gradient" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolis"
            android:text="Username"
            android:textColor="@color/heading"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/edtmobileno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_person"
            android:drawablePadding="20dp"
            android:fontFamily="@font/metropolis"
            android:hint="Enter Username"
            android:inputType="text"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/metropolis"
            android:text="Password"
            android:textColor="@color/heading"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>


        <EditText
            android:id="@+id/edtpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtmobileno"
            android:drawableRight="@drawable/ic_enhanced"
            android:drawablePadding="20dp"
            android:fontFamily="@font/metropolis"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnrdata">

            <CheckBox
                android:id="@+id/checkbox_TandC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis"
                android:textStyle="italic"></CheckBox>

            <TextView
                android:id="@+id/text_termsandcondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis"
                android:text="@string/termsandcondition"
                android:textSize="12sp"></TextView>
        </LinearLayout>

        <Button
            android:id="@+id/btnsignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect_gradient"
            android:fontFamily="@font/metropolis"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
        <!--
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="right"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="15sp"
                        android:id="@+id/txtforgotpass"
                        android:text="Forgot Password?" />-->

    </LinearLayout>


    <TextView
        android:id="@+id/txtsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lnrdata"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/metropolis"
        android:text="Sign In"
        android:textColor="#fff"
        android:textSize="18sp"></TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/txtsignup"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mainlogo">

    </de.hdodenhof.circleimageview.CircleImageView>


</RelativeLayout>