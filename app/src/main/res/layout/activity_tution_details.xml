<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.Update.TutionDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lnr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <EditText
                android:id="@+id/boardtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:background="@drawable/edittext_shape"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/mediumtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:background="@drawable/edittext_shape"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/standardtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:background="@drawable/edittext_shape"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/subjecttxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:background="@drawable/edittext_shape"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/timetxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:background="@drawable/edittext_shape"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/lnr">

            <Button
                android:id="@+id/personalDetailUpdateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_shape"
                android:backgroundTint="@color/colorPrimary"
                android:text="Update Details"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>